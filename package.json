    "test": "jest --config jestconfig.json"
  },
  "dependencies": {
    "rpc-websockets": "^4.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.3",
    "typescript": "^3.1.2",
    "jest": "^24.1.0",
    "ts-jest": "^23.10.5",
    "parcel": "^1.10.2",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1"
  },
  "files": [
    "lib/**/*"
  ]
