{
  "name": "@holochain/hc-web-client",
  "version": "0.0.1",
  "description": "Holochain container connection helper for web based UIs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Michael Dougherty <michael.dougherty@holo.host>",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "tsc",
    "build:web": "npm run build && parcel build -o index.js --no-minify lib/index.js",
